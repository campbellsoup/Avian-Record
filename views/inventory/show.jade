extends ../layout
block content
	br
	a(href='/inventory/') All Records
	a(href='/inventory/#{item._id}/edit') Edit Information
	a(href='/inventory/new') New Record
	div
		h2 Bird Identification and Notes
		div(class='show')
			label Species: #{item.species}
			label Sub-Species: #{item.subspecies}
			label Hybrid Species: #{item.hybrid}
			label Band ID: #{item.band}
			label Hatch Date: #{item.hatch}
			label Gender: #{item.gender}
			label Mutation: #{item.mutation}
			label Father ID: #{item.dad}
			label Mother ID: #{item.mom}
			label Location: #{item.locate}
			label Acquired From: #{item.acquired}
			label Origin: #{item.origin}
			label Owner: #{item.owner}
			label Pet Name: #{item.pet}
			label Import Date: #{item.imported}
			label Microchip ID: #{item.chip}
			label DNA Fingerprint Sample ID: #{item.dna}
			label Available: #{item.available}
			label Notes: #{item.notes}
			form(method='post' action='/inventory/#{item._id}?_method=delete')
				input(type='submit' value='Delete') 