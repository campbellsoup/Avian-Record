extends ../layout
block title
	title Edit Pairs Record
block content
	a(href='/pairs/new') New Pairing
	p
	h3 Edit Pairs Record
	//-
	form(method='post' action='/pairs/#{pair._id}?_method=put')
			label Location / Cage#:
			input(type='text' name='locate' value=pair.locate)
			label Male-Band ID:
			input(type='text' name='maleBand' value=pair.maleBand)
			label Female-Band ID:
			input(type='text' name='femaleBand' value=pair.femaleBand)
			//-This field should autofil based on Band ID
			Label Species:
			div(id='species' name='species' value=pair.species)
			//-Calculation based on Male&Female pedegree
			label Co-Efficient of Relations:
			div(id='coefficient' name='coefficient' value=pair.coefficient)
			label Date Paired:
			input(type='date' name='paired' value=pair.paired)
			//-Possibly add a mutation calculator.  Ether auto-caluculates based on the BandIDs or plugin a 3rd party calculator.
			
			//-Add a file upload. NOT Import, but upload and connected to pair ID
			Label Notes:
			textarea(rows='5' cols='30' name='notes')
				if pair.notes
					| #{pair.notes}
			p		
			input(type='submit' value='Update Pair')